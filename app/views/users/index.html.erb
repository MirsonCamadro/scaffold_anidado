<p id="notice"><%= notice %></p>

<h1 class="text-center">Users</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Cantidad de playlist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="thead-light">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.playlist.count %></td>
        <td><%= link_to 'Show', user, class:"btn btn-outline-primary"  %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-outline-success"  %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

